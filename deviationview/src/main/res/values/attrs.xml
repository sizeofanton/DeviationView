            <enum name="horizontal" value="1" />
        </attr>

        <attr name="scaleBgColor" format="color" />
        <attr name="scaleCentralColor" format="color" />
        <attr name="scaleFrontierColor" format="color" />
        <attr name="scaleContourColor" format="color" />
